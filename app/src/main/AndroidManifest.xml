<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.labmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_syringe_text"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_syringe_text_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Activity.GroupEditionActivity"></activity>
        <activity android:name=".Activity.SuccessActivity" />
        <activity
                android:name=".Activity.NoInternetConnectionActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.ResetPasswordActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.ConfirmationActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.SignupActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.LoginActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.MainPageActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.MedicalFilesActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.TestsResultOverviewActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.AddMedicalFilesActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.AddTestResultActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name=".Activity.MainActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>