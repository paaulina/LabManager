<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/background_thin_blue_line">

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textSize="18sp"
            style="@style/iosLikeFont"
            app:layout_constraintBottom_toBottomOf="@+id/testDateTextView"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/testDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="2019-12-04"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/testResultNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco_regular"
            android:text="Androstedion"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <TextView
            android:id="@+id/numericResultTextView"
            android:layout_width="128dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:text="122.46"
            android:textSize="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/testResultNameTextView"
            app:layout_constraintVertical_bias="0.238" />

    <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_thin_blue_line"
            android:padding="12dp"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik:"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/posNegResultTextView"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/posNegResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Pozytywny"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/numericResultTextView"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/numericResultTextView" />

    <TextView
            android:id="@+id/notesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Notatki"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numericResultTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>