<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp">

        <Spinner
                android:id="@+id/first_unit_spinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/unit_separator"/>
        <Spinner
                android:id="@+id/second_unit_spinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"/>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_ok_dialog"
            android:text="@string/ok"
            android:textColor="@color/buttonColor"
            android:onClick="setUpUnits"
            android:background="@drawable/round_button_background_blue"
            android:layout_marginBottom="20dp"
            />



</LinearLayout>