<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_thin_blue_line">

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="10dp" android:id="@+id/linearLayout" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toStartOf="@+id/numericResultTextView" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent">

        <TextView android:id="@+id/testResultNameTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="30dp"
                  android:text="Androstedion"/>

        <TextView android:id="@+id/testDateTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="2019-12-04"/>

    </LinearLayout>

    <TextView
            android:id="@+id/numericResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122.46"
            android:textSize="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/prestarButton"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/prestarButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@color/colorBackground"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/prestar" />

    <ImageButton
            android:id="@+id/starButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@color/colorBackground"
            android:padding="10dp"
            android:visibility="invisible"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star" />

    <ImageView
            android:id="@+id/imageViewFilled"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/numericResultTextView"
            app:layout_constraintEnd_toEndOf="@+id/numericResultTextView"
            app:layout_constraintStart_toStartOf="@+id/numericResultTextView"
            app:layout_constraintTop_toTopOf="@+id/numericResultTextView"
            app:srcCompat="@drawable/circle_filled" />

    <ImageView
            android:id="@+id/imageViewEmpty"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/numericResultTextView"
            app:layout_constraintEnd_toEndOf="@+id/numericResultTextView"
            app:layout_constraintStart_toStartOf="@+id/numericResultTextView"
            app:layout_constraintTop_toTopOf="@+id/numericResultTextView"
            app:srcCompat="@drawable/circle_empty" />

</androidx.constraintlayout.widget.ConstraintLayout>